<%- include('../../partials/header.ejs')-%>
<%- include('../../partials/navbar.ejs')-%>

<body>
    <div class="container">
        <div class="card mt-3">
             <div class="card-header">
                <h2>Edição de Tipos</h2>
             </div>
             <div class="card-body">
                <form  action="/tipo/atualizar" method="post">

                    <label for="codigo">Código</label>
                    <input class="form-control mt-3" value="<%= tipo.codigo %>" type="text" name="codigo" id="codigo">
                    <input value="<%= tipo.id %>" type="hidden" name="id" id="id">
                    <label for="descricao">Descrição</label>
                    <input class="form-control mt-3" value="<%= tipo.descricao %>" type="text" name="descricao" id="descricao">
                    <button class="btn btn-success mt-3" type="submit">Atualizar</button>
                    <a href="/tipos" class="btn btn-primary mt-3">Cancelar</a>
                </form>
             </div>
        </div>



    </div>
</body>


